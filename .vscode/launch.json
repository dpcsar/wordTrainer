{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": []
        },
        {
            "name": "Generate Keyword Samples",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "generate-keywords",
                "--keyword", "activate",
                "--samples", "10"
            ]
        },
        {
            "name": "Generate Background Noise",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "generate-noise",
                "--type", "all",
                "--samples", "10"
            ]
        },
        {
            "name": "Generate Non-Keywords",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "generate-non-keywords",
                "--samples", "20",
                "--avoid-keyword", "activate"
            ]
        },
        {
            "name": "Mix Audio Samples",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "mix-audio",
                "--keyword", "activate",
                "--num-mixes", "50",
                "--min-snr", "-5",
                "--max-snr", "20"
            ]
        },
        {
            "name": "Train Model",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "train",
                "--keywords", "activate",
                "--epochs", "50",
                "--batch-size", "32"
            ]
        },
        {
            "name": "Test Model (gTTS)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "test-gtts",
                "--samples", "5",
            ]
        },
        {
            "name": "Test Model (non-keywords)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "test-non-keywords",
                "--samples", "5",
            ]
        },
        {
            "name": "Test Model (Microphone)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "test-mic",
                "--threshold", "0.6"
            ]
        },
        {
            "name": "Prepare for Android",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/prepare_for_android.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": []
        },
    ]
}
